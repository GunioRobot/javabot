<project name="javabot" default="main">
	
	<property name="build" location="build"/>
	
	<path id="javabot.cp">
		<fileset dir="lib" includes="*.jar"/>
	</path>

	<target name="init">
		<mkdir dir="${build}"/>
	</target>
	
	<target name="main" depends="init">
		<javac destDir="${build}" srcDir="src" classpathref="javabot.cp"/>
	</target>

	<target name="clean">
		<delete dir="${build}"/>
	</target>
</project>
